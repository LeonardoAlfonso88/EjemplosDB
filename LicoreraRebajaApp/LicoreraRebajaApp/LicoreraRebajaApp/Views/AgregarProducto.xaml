<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LicoreraRebajaApp.Views.AgregarProducto">
    <ContentPage.Content>
        <StackLayout>
            <Label StyleClass="label" Text="Nombre"></Label>
            <Entry Text="{Binding Nombre}"></Entry>
            <Label StyleClass="label" Text="Valor Unitario"></Label>
            <Entry Text="{Binding ValorUnitario}"></Entry>
            <Label StyleClass="label" Text="Tamaño"></Label>
            <Entry Text="{Binding Tamaño}"></Entry>
            <Button StyleClass="button" Text="Guardar" Command="{Binding GuardarCommand}"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>